<Window x:Class="RestoreUserSettings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Restore User Settings"
        Height="300"
        Width="500"
        Background="{StaticResource WindowBackgroundBrush}"
        FontFamily="Segoe UI"
        FontSize="14"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="NoResize">

    <Border CornerRadius="6"
            Background="{StaticResource WindowBackgroundBrush}">
        <DockPanel LastChildFill="True">
            <!-- Title Bar -->
            <Border Background="{StaticResource AccentBrush}"
                    Height="32"
                    DockPanel.Dock="Top"
                    CornerRadius="6,6,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Restore User Settings"
                               Foreground="White"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0" />
                    <Button Content="✕"
                            Width="32"
                            Height="32"
                            HorizontalAlignment="Right"
                            Background="Transparent"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="Close_Click" />
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- File Picker -->
                <StackPanel Orientation="Horizontal"
                            Grid.Row="0"
                            Margin="0,0,0,10">
                    <TextBox x:Name="FilePathBox"
                             Width="350"
                             Margin="0,0,10,0" />
                    <Button Content="Browse..."
                            Width="100"
                            Style="{StaticResource DarkSteelButtonStyle}"
                            Click="Browse_Click" />
                </StackPanel>

                <!-- Restore Button -->
                <Button Content="Restore Registry"
                        Grid.Row="1"
                        Width="150"
                        Style="{StaticResource DarkSteelButtonStyle}"
                        HorizontalAlignment="Left"
                        Click="Restore_Click" />

                <!-- Log Output -->
                <TextBox x:Name="LogBox"
                         Grid.Row="2"
                         Margin="0,10,0,0"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         Background="{StaticResource ControlBackgroundBrush}"
                         Foreground="{StaticResource TextBrush}"
                         BorderBrush="{StaticResource ControlBorderBrush}" />
            </Grid>
        </DockPanel>
    </Border>
</Window>