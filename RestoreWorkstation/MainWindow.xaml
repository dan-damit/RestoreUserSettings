<Window x:Class="RestoreWorkstation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Restore Workstation Tool"
        Height="600"
        Width="900"
        Background="{StaticResource WindowBackgroundBrush}"
        FontFamily="Segoe UI"
        FontSize="14"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="NoResize">

    <Border CornerRadius="6"
            Background="{StaticResource WindowBackgroundBrush}">
        <DockPanel LastChildFill="True">
            <!-- Title Bar -->
            <Border Background="{StaticResource AccentBrush}"
                    Height="32"
                    DockPanel.Dock="Top"
                    CornerRadius="6,6,0,0"
                    MouseLeftButtonDown="TitleBar_MouseDown">
                <Grid>
                    <TextBlock Text="Restore Workstation Tool"
                               Foreground="White"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0" />
                    <Button Content="✕"
                            Width="32"
                            Height="32"
                            HorizontalAlignment="Right"
                            Background="Transparent"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="Close_Click" />
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- File Picker -->
                <StackPanel Orientation="Horizontal"
                            Grid.Row="0"
                            Height="30"
                            Margin="0,0,0,10">
                    <TextBox x:Name="backupRootFolder"
                             Width="500"
                             Margin="0,0,10,0" />
                    <Button Content="Browse..."
                            Width="100"
                            Style="{StaticResource DarkSteelButtonStyle}"
                            Click="Browse_Click" />
                </StackPanel>

                <!-- Restore progressBar and Button -->
                <StackPanel Orientation="Horizontal"
                            Grid.Row="1"
                            Height="30"
                            Margin="0,0,0,10">
                    <ProgressBar x:Name="progressBar"
                                 Width="500"
                                 Margin="0,0,10,0" />
                    <Button x:Name="btnRestore"
                            Content="Restore"
                            Width="100"
                            Style="{StaticResource DarkSteelButtonStyle}"
                            Click="Restore_Click" />
                </StackPanel>

                <!-- Log Output -->
                <ListBox x:Name="LogBox"
                         Grid.Row="2"
                         Margin="0,10,0,0"
                         Background="{StaticResource ControlBackgroundBrush}"
                         Foreground="{StaticResource TextBrush}"
                         BorderBrush="{StaticResource ControlBorderBrush}" />
            </Grid>
        </DockPanel>
    </Border>
</Window>